<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/naukadwa"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:fillViewport="true"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="30dp"
        android:id="@+id/Image"
        android:layout_marginLeft="5dp"
        android:src="@drawable/clake"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/tekst"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text=" Fizykor v1.9"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/colorAccent"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="cLake Studio 2016"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:fontFamily="sans-serif-thin"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="Podziękowania dla Adama i zespołu Beta-testerów. W razie pytań, sugestii, proszę o kontakt przez komentarz/e-mail. Treści będą progresywnie rozwijane."/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_margin="@dimen/fab_margin"
        app:fabSize="normal"
        android:src="@drawable/ic_trending_flat_white_24dp" />

    </TableLayout>
    </ScrollView>